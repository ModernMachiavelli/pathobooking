generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    String   @id @default(cuid())
  email String   @unique
  name  String?
  role  UserRole @default(PATIENT)

  // простий пароль (поки без хешування)
  passwordHash String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctorProfile DoctorProfile?

  patientCases        PatientCase[]
  appointmentRequests AppointmentRequest[] @relation("PatientUserAppointmentRequests")
  doctor              Doctor?
}

enum Role {
  PATIENT
  DOCTOR
  MOD
}

enum UserRole {
  PATIENT
  DOCTOR
  ADMIN
}

model Doctor {
  id       String  @id @default(cuid())
  fullName String
  slug     String  @unique
  email    String? @unique
  phone    String?

  clinicName String?
  city       String
  region     String // Напр. "Сумська", "Київська" — можна буде фільтрувати по області

  specialization    String // Основна спеціалізація (напр. "патоморфолог", "онколог")
  subSpecialization String? // Напр. "молочна залоза", "легені", "гістологія шкіри" тощо

  yearsOfExperience Int?
  description       String? // Короткий опис / bio
  avatarUrl         String? // Шлях до аватарки (поки можна public/avatar-*.png)

  isTelepathologyAvailable Boolean @default(false)
  isAcceptingNewPatients   Boolean @default(true)

  lat Float? // Для карти України
  lng Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String? @unique
  user   User?   @relation(fields: [userId], references: [id])

  appointmentRequests AppointmentRequest[] @relation("DoctorAppointments")
}

model DoctorProfile {
  id           String            @id @default(cuid())
  userId       String            @unique
  user         User              @relation(fields: [userId], references: [id])
  fullName     String
  about        String?
  specialties  DoctorSpecialty[]
  lat          Float
  lng          Float
  city         String
  region       String
  experienceY  Int               @default(0)
  rating       Float             @default(0)
  casesHandled Int               @default(0)
  createdAt    DateTime          @default(now())
}

model Specialty {
  id    String            @id @default(cuid())
  code  String            @unique
  title String
  docs  DoctorSpecialty[]
}

model DoctorSpecialty {
  doctorId    String
  specialtyId String
  doctor      DoctorProfile @relation(fields: [doctorId], references: [id])
  specialty   Specialty     @relation(fields: [specialtyId], references: [id])

  @@id([doctorId, specialtyId])
}

model QuestionnaireVersion {
  id        String   @id @default(cuid())
  version   Int      @unique
  createdAt DateTime @default(now())
  json      Json
}

model Case {
  id                     String   @id @default(cuid())
  userId                 String
  questionnaireVersionId String
  answersJson            Json
  lat                    Float?
  lng                    Float?
  derivedTags            String[]
  createdAt              DateTime @default(now())
}

model PatientCase {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  age             Int?
  sex             String?
  suspectedOrgan  String?
  suspicionLevel  String?
  mainComplaint   String?
  freeTextSummary String?

  biopsyType          String? // тип біопсії: core, excisional, FNA, endoscopic...
  materialType        String? // матеріал: біопсія, операційний матеріал, цитологія
  priorTreatment      String? // попереднє лікування: операція, хіміо, променева тощо
  suspectedCancerType String? // підозрюваний тип пухлини (наприклад, інвазивна протокова карцинома)
  stagingInfo         String? // стадія / TNM / група ризику, якщо відомо

  createdByUserId String?
  createdByUser   User?   @relation(fields: [createdByUserId], references: [id])

  attachments         Attachment[]         @relation("CaseAttachments")
  appointmentRequests AppointmentRequest[]
}

enum AppointmentStatus {
  PENDING
  ACCEPTED
  REJECTED
  DONE
}

model AppointmentRequest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patientCaseId String
  patientCase   PatientCase @relation(fields: [patientCaseId], references: [id])

  doctorId String
  doctor   Doctor @relation("DoctorAppointments", fields: [doctorId], references: [id])

  patientEmail String
  message      String
  status       AppointmentStatus @default(PENDING)

  isReadByDoctor Boolean @default(false)

  doctorReply          String?   // текст відповіді лікаря
  doctorReplyCreatedAt DateTime? // коли лікар відповів

  // прив’язка до User (пацієнт)
  patientUserId String?
  patientUser   User?   @relation("PatientUserAppointmentRequests", fields: [patientUserId], references: [id])
}

model Attachment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  patientCaseId String
  type          String  @default("other") // "histology", "lab_report", "imaging", ...
  url           String
  filename      String
  size          Int?
  contentType   String?

  patientCase PatientCase @relation("CaseAttachments", fields: [patientCaseId], references: [id])
}
