generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String         @id @default(cuid())
  email     String         @unique
  createdAt DateTime       @default(now())
  role      Role           @default(PATIENT)
  doctor    DoctorProfile?
}

enum Role {
  PATIENT
  DOCTOR
  MOD
}

model Doctor {
  id           String   @id @default(cuid())
  fullName     String
  slug         String   @unique
  email        String?  @unique
  phone        String?

  clinicName   String?
  city         String
  region       String   // Напр. "Сумська", "Київська" — можна буде фільтрувати по області

  specialization String // Основна спеціалізація (напр. "патоморфолог", "онколог")
  subSpecialization String? // Напр. "молочна залоза", "легені", "гістологія шкіри" тощо

  yearsOfExperience Int?
  description  String?  // Короткий опис / bio
  avatarUrl    String?  // Шлях до аватарки (поки можна public/avatar-*.png)

  isTelepathologyAvailable Boolean @default(false)
  isAcceptingNewPatients   Boolean @default(true)

  lat          Float?    // Для карти України
  lng          Float?

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  appointmentRequests AppointmentRequest[] @relation("DoctorAppointments")
}

model DoctorProfile {
  id           String            @id @default(cuid())
  userId       String            @unique
  user         User              @relation(fields: [userId], references: [id])
  fullName     String
  about        String?
  specialties  DoctorSpecialty[]
  lat          Float
  lng          Float
  city         String
  region       String
  experienceY  Int               @default(0)
  rating       Float             @default(0)
  casesHandled Int               @default(0)
  createdAt    DateTime          @default(now())
}

model Specialty {
  id    String            @id @default(cuid())
  code  String            @unique
  title String
  docs  DoctorSpecialty[]
}

model DoctorSpecialty {
  doctorId    String
  specialtyId String
  doctor      DoctorProfile @relation(fields: [doctorId], references: [id])
  specialty   Specialty     @relation(fields: [specialtyId], references: [id])

  @@id([doctorId, specialtyId])
}

model QuestionnaireVersion {
  id        String   @id @default(cuid())
  version   Int      @unique
  createdAt DateTime @default(now())
  json      Json
}

model Case {
  id                     String   @id @default(cuid())
  userId                 String
  questionnaireVersionId String
  answersJson            Json
  lat                    Float?
  lng                    Float?
  derivedTags            String[]
  createdAt              DateTime @default(now())
}

model PatientCase {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  age             Int?
  sex             String?
  suspectedOrgan  String?
  suspicionLevel  String?
  mainComplaint   String?
  freeTextSummary String?

  appointmentRequests AppointmentRequest[] @relation("PatientCaseAppointments")

  attachments Attachment[] @relation("CaseAttachments")
}

enum AppointmentStatus {
  PENDING
  ACCEPTED
  REJECTED
  DONE
}

model AppointmentRequest {
  id        String            @id @default(cuid())
  createdAt DateTime          @default(now())
  status    AppointmentStatus @default(PENDING)

  patientEmail String?
  message      String?

  patientCaseId String
  doctorId      String

  patientCase   PatientCase @relation("PatientCaseAppointments", fields: [patientCaseId], references: [id])
  doctor        Doctor      @relation("DoctorAppointments",       fields: [doctorId],      references: [id])
}

model Attachment {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())

  patientCaseId String
  type          String   @default("other") // "histology", "lab_report", "imaging", ...
  url           String
  filename      String
  size          Int?
  contentType   String?

  patientCase   PatientCase @relation("CaseAttachments", fields: [patientCaseId], references: [id])
}